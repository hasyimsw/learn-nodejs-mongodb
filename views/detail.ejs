<div class="container mt-4">
    <div class="row">
        <div class="col md-8">
            <h2>Detail Kontak</h2>

            <% if (!contact) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    Data kontak tidak ada. <br><a href="/contact" class="alert-link fw-light">&laquo; Kembali ke daftar kontak</a>.
                </div>
            <% } else { %>
            <div class="card" style="width: 18rem">
                <div class="card-body">
                    <h5 class="card-title"><%= contact.nama %> </h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp %> </h6>
                    <p class="card-text"><%= contact.email %> </p>
                    <div class="d-flex">
                        <h5><a href="/contact/edit/<%= contact.nama %>" class="btn btn-warning badge me-2" onclick="return confirm('yakin dek?');">Edit</a></h5>
                        <form method="POST" action="/contact?_method=DELETE">
                            <input type="hidden" name="nama" value="<%= contact.nama %>">
                            <h5><button type="submit" class="btn btn-danger badge" onclick="return confirm('yakin?')">Delete</button></h5>
                        </form>
                    </div>
                    <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali ke daftar kontak</a>
                </div>
            </div>
            <% } %> 
        </div>
    </div>
</div>